<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><% if @task.completed == true %></p>
<%= 'This task is completed!' %>
<% else %>
<%= 'This task is not completed yet' %>
<% end %>

<p><%= link_to 'Edit a task', edit_task_path(@task) %></p>
<p><%= link_to 'Back Home', tasks_path(@task) %></p>
<p><%= link_to 'Delete a task', task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></p>
